<%= form_tag('/session', method: :post) do %>

  <div class="form-group">
    <%= label_tag(:name, "Doctor's name:") %>

    <%= collection_select(:doctor, :name, Doctor.all, :name, :name, prompt: "Please select doctor name from this dropdown") %>
  </div>

  <div class="form-group">
    <%= label_tag(:password, "Password:") %>
    <%= password_field_tag(:password, nil, class: "form-control") %>
  </div>

  <div class="actions">
    <%= submit_tag("Sign In") %>
  </div>

<% end %>
