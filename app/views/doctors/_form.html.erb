<%= form_for @doctor do |f| %>
  <% if @doctor.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@doctor.errors.count, "error") %> prohibited this user from being saved:
      </h2>

      <ul>
      <% @doctor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :specialty%>
    <br>
    <%= f.text_field :specialty, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :medicaid, "Do you accept Medicaid Insurance?" %>
    <br>
    <%= f.number_field :medicaid, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :admin, "Check box if you are a manager" %>
    <%= f.check_box :admin, class: "form-check-input" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <br>
    <%= f.password_field :password, class: "form-control" %>

  <div class="actions">
    <br/>
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>
